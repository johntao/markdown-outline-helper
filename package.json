{
  "name": "markdown-outline-helper",
  "displayName": "markdown-outline-helper",
  "description": "A minimal markdown outline helper to convert between list and headings, convert hierarchical list into flat items, and to sort hierarchical items",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:markdown-outline-helper.convertHeadingToList",
    "onCommand:markdown-outline-helper.convertListToHeading",
    "onCommand:markdown-outline-helper.sortList",
    "onCommand:markdown-outline-helper.sortListAndConvertToFlat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-outline-helper.convertHeadingToList",
        "title": "Convert headings to list"
      },
      {
        "command": "markdown-outline-helper.convertListToHeading",
        "title": "Convert list to headings"
      },
      {
        "command": "markdown-outline-helper.sortList",
        "title": "Sort list"
      },
      {
        "command": "markdown-outline-helper.sortListAndConvertToFlat",
        "title": "Sort list and convert to flat items"
      }
    ],
    "configuration": {
      "title": "markdown-outline-helper",
      "properties": {
        "markdown-outline-helper.readListIndent": {
          "type": "string",
          "default": "  ",
          "description": "Specifies the indent basis for the parsing function."
        },
        "markdown-outline-helper.writeListIndent": {
          "type": "string",
          "default": "  ",
          "description": "Specifies the indent basis for the printing function."
        },
        "markdown-outline-helper.headingStartLevel": {
          "type": "integer",
          "default": 1,
          "description": "Specifies the starting level of the heading (zero-based)."
        },
        "markdown-outline-helper.headingIndent": {
          "type": "string",
          "default": "&emsp;&emsp;",
          "description": "Specifies the indent basis of the heading."
        },
        "markdown-outline-helper.flatItemDelimiter": {
          "type": "string",
          "default": "/ ",
          "description": "Specifies the delimiter for the flat hierarchical items."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  }
}
